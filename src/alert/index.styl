@import '../style/index.styl';

.pp-alert
  -webkit-backface-visibility: hidden;
  -webkit-transform-style: preserve-3d;
  content '';
  position: fixed
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: rgba(0,0,0,.6);

  .content-box
    position: fixed;
    z-index 1000;
    background-color: #fff;
    border-radius: 4px;
    width: 300px;
    left: 50%;
    margin-left: -150px;
    top: 26%

  .title
    line-height: 26px;
    padding-top: 24px;
    text-align: center;
    width: 100%;
    color: #262626;
    font-size: 18px;
    font-weight: bold;

  .info
    color: #262626;
    font-size: 15px;
    line-height: 22px;
    padding: 12px 25px 24px;
    text-align: center;
    max-height: 280px;
    overflow-y: auto;
  
  .info::-webkit-scrollbar
    display:none

  .btn-item
    width 100%
    height: 52px;
    line-height: 52px;
    text-align: center;
    color: #262626;
    font-size: 16px
  
  .buttonNum-2
    display: flex;
    display: -webkit-flex;

  .buttonNum-2 .btn-item
    flex: 1;
    -webkit-flex: 1;
  
